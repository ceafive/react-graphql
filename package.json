{
  "name": "react-graphql",
  "version": "1.0.0",
  "engines": {
    "node": "12.16.1",
    "npm": "6.14.4"
  },
  "description": "a react app implementing Apollo client and express-graphql on the server side",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ceafive/react-graphql"
  },
  "scripts": {
    "dev:server": "cd server && npm i && npm start",
    "dev:client": "cd client && npm i && npm start",
    "dev": "concurrently --kill-others-on-fail \"npm run dev:server\" \"npm run dev:client\"",
    "build:client": "cd client && npm run build",
    "start": "cd server && node app.js",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm install --only=dev --no-shrinkwrap && npm run build:client"
  },
  "author": "Castro Agbo <ceafive@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^5.3.0"
  }
}
