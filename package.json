{
  "name": "react-graphql",
  "version": "1.0.0",
  "engines": {
    "node": "12.16.1",
    "npm": "6.14.4"
  },
  "description": "a react app implementing Apollo client and express-graphql on the server side",
  "main": "./server/app.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ceafive/react-graphql"
  },
  "scripts": {
    "server": "cd server && npm install --only=dev --no-shrinkwrap",
    "client": "cd client && npm install",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "start": "cd server && node app.js",
    "build": "cd client && npm run build",
    "heroku-postbuild": "concurrently --kill-others-on-fail \"npm run build\" \"npm run server\""
  },
  "author": "Castro Agbo <ceafive@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^5.3.0"
  }
}
